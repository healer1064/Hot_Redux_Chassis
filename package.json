{
  "name": "hot-redux-chassis",
  "version": "1.0.0",
  "author": "Hanse",
  "license": "MIT",
  "scripts": {
    "postinstall": "./scripts/postinstall",
    "start": "nodemon --ignore app --ignore tests --exec babel-node -- server/index.js",
    "build": "NODE_ENV=production webpack  --config webpack/webpack.config.babel.js --color -p --progress --env",
    "build:dll": "webpack --display-chunks --color --config webpack/webpack.dll.babel.js --color -p --progress --env",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint app --ext ts,tsx,js --ignore-path .gitignore",
    "lint:css": "stylelint \"app/**/*.css\"",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "npm run test -- --watch",
    "ci": "yarn test && yarn lint && yarn tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hanse/hot-redux-chassis.git"
  },
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/node": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-react-jsx-source": "7.8.3",
    "@babel/polyfill": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@types/classnames": "2.2.9",
    "@types/history": "4.7.4",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.7",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-modal": "3.10.3",
    "@types/react-redux": "7.1.5",
    "@types/react-router": "5.1.4",
    "@types/react-router-dom": "5.1.3",
    "@types/react-test-renderer": "16.9.1",
    "@types/redux-logger": "3.0.7",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-dynamic-import-node": "2.3.0",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-react-app": "5.1.0",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "file-loader": "5.0.2",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "imports-loader": "0.8.0",
    "jest": "24.9.0",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "0.9.0",
    "nodemon": "2.0.2",
    "null-loader": "3.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "1.19.1",
    "raf": "3.4.1",
    "raw-loader": "4.0.0",
    "react-addons-test-utils": "15.6.2",
    "react-hot-loader": "4.12.18",
    "react-test-renderer": "16.12.0",
    "style-loader": "1.1.2",
    "stylelint": "13.0.0",
    "stylelint-config-standard": "19.0.0",
    "terser-webpack-plugin": "2.3.2",
    "typescript": "3.7.4",
    "url-loader": "3.0.0",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-middleware": "3.7.2",
    "webpack-hot-middleware": "2.25.0"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "classnames": "2.2.6",
    "connected-react-router": "6.6.1",
    "dom-scroll-into-view": "1.2.1",
    "express": "4.17.1",
    "fuzzysearch": "1.0.3",
    "history": "4.10.1",
    "isomorphic-fetch": "2.2.1",
    "query-string": "6.9.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-markdown": "4.3.1",
    "react-modal": "3.11.1",
    "react-redux": "7.1.3",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "redux": "4.0.5",
    "redux-logger": "3.0.6",
    "redux-observable": "1.2.0",
    "rxjs": "6.5.4",
    "uuid": "3.3.3"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "indentation": 2,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/tests/FileStub.js",
      "^.+\\.css$": "<rootDir>/tests/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx|ts|tsx)$",
    "setupFiles": [
      "raf/polyfill"
    ]
  },
  "dllConfig": {
    "path": "dist",
    "exclude": [
      "express",
      "uuid"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-webpack-loader-syntax": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "no-unused-vars": "off"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpack.config.babel.js"
        }
      },
      "react": {
        "version": "16"
      }
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "globals": {
      "__DEV__": true,
      "COMMIT_HASH": true,
      "log": true
    }
  }
}
