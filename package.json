{
  "name": "hot-redux-chassis",
  "version": "0.0.1",
  "author": "Hanse",
  "license": "MIT",
  "engines": {
    "node": "6.6.0"
  },
  "scripts": {
    "postinstall": "if [ $BUILD_ASSETS ]; then npm run build; fi",
    "start": "nodemon --ignore app --ignore tests --exec babel-node -- server/index.js",
    "build": "NODE_ENV=production webpack  --config webpack/webpack.config.babel.js --color -p --progress --env",
    "flow": "flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint app --ignore-path .gitignore",
    "lint:css": "stylelint ./app/**/*.css",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hanse/hot-redux-chassis.git"
  },
  "dependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-jest": "15.0.0",
    "babel-loader": "6.2.5",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "body-parser": "1.15.2",
    "classnames": "2.2.5",
    "css-loader": "0.25.0",
    "empty": "0.10.1",
    "enzyme": "2.4.1",
    "eslint": "3.5.0",
    "eslint-config-airbnb": "11.1.0",
    "eslint-import-resolver-webpack": "0.6.0",
    "eslint-plugin-flowtype": "2.19.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.2",
    "eslint-plugin-react": "6.3.0",
    "express": "4.14.0",
    "webpack-express-middleware": "1.0.0",
    "extract-text-webpack-plugin": "2.0.0-beta.3",
    "file-loader": "0.9.0",
    "flow-bin": "0.32.0",
    "history": "4.2.0",
    "html-webpack-plugin": "2.22.0",
    "identity-obj-proxy": "3.0.0",
    "immutable": "3.8.1",
    "immutable-devtools": "0.0.7",
    "imports-loader": "0.6.5",
    "isomorphic-fetch": "2.2.1",
    "jest": "15.1.1",
    "json-loader": "0.5.4",
    "json-server": "0.8.21",
    "lodash": "4.16.1",
    "node-uuid": "1.4.7",
    "nodemon": "1.10.2",
    "null-loader": "0.1.1",
    "postcss-cssnext": "2.8.0",
    "postcss-import": "8.1.0",
    "postcss-loader": "0.13.0",
    "postcss-nested": "1.0.0",
    "raw-loader": "0.5.1",
    "react": "15.3.2",
    "react-addons-test-utils": "15.3.2",
    "react-dom": "15.3.2",
    "react-hot-loader": "3.0.0-beta.5",
    "react-markdown": "2.4.2",
    "react-overlays": "0.6.6",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "react-router-redux": "4.0.6",
    "redux": "3.6.0",
    "redux-logger": "2.6.1",
    "redux-observable": "0.12.0",
    "rxjs": "5.0.0-beta.12",
    "style-loader": "0.13.1",
    "stylelint": "7.3.1",
    "stylelint-config-standard": "13.0.2",
    "url-loader": "0.5.7",
    "webpack": "2.1.0-beta.25"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "indentation": 2,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/tests/FileStub.js",
      "^.+\\.css$": "<rootDir>/tests/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$"
  }
}
