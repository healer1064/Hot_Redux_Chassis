{
  "name": "hot-redux-chassis",
  "version": "0.1.0",
  "author": "Hanse",
  "license": "MIT",
  "scripts": {
    "postinstall": "./scripts/postinstall",
    "start": "nodemon --ignore app --ignore tests --exec babel-node -- server/index.js",
    "build": "NODE_ENV=production webpack  --config webpack/webpack.config.babel.js --color -p --progress --env",
    "build:dll": "webpack --display-chunks --color --config webpack/webpack.dll.babel.js",
    "flow": "flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint app --ignore-path .gitignore",
    "lint:css": "stylelint \"app/**/*.css\"",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "ci": "yarn test && yarn lint && yarn flow"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hanse/hot-redux-chassis.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-react-jsx-source": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "flow-bin": "^0.81.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "imports-loader": "0.8.0",
    "jest": "^23.6.0",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "^0.4.3",
    "nodemon": "^1.18.4",
    "null-loader": "0.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "prettier": "^1.14.3",
    "raf": "3.4.0",
    "raw-loader": "0.5.1",
    "react-addons-test-utils": "15.6.2",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "18.2.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.0",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.2"
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "add": "2.0.6",
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "dom-scroll-into-view": "1.2.1",
    "express": "4.16.3",
    "fuzzysearch": "1.0.3",
    "history": "4.7.2",
    "isomorphic-fetch": "2.2.1",
    "node-uuid": "1.4.8",
    "query-string": "6.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.11",
    "react-loadable": "5.4.0",
    "react-markdown": "^3.4.1",
    "react-modal": "^3.5.1",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-router-redux": "5.0.0-alpha.8",
    "react-test-renderer": "^16.4.2",
    "redux": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.2.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "indentation": 2,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleDirectories": [
      "<rootDir>",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/tests/FileStub.js",
      "^.+\\.css$": "<rootDir>/tests/CSSStub.js"
    },
    "testRegex": "\\.spec\\.(js|jsx)$",
    "setupFiles": [
      "raf/polyfill"
    ]
  },
  "eslintIgnore": [
    "flow-typed/npm"
  ],
  "dllConfig": {
    "path": "dist",
    "exclude": [
      "express",
      "node-uuid"
    ]
  }
}
