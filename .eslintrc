{
  "parser": "babel-eslint",
  "extends": ["react-app", "prettier", "prettier/flowtype", "prettier/react"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [2, { "singleQuote": true, "bracketSpacing": true }],
    "import/no-webpack-loader-syntax": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.config.babel.js"
      }
    },
    "react": {
      "version": "16"
    }
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "COMMIT_HASH": true,
    "log": true
  }
}
