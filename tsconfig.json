{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    // Don't emit; allow Babel to transform files.
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "app/*": ["app/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": ["app/**/*"]
}
